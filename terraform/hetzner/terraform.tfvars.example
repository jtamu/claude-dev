# -----------------------------------------------------------------------------
# Hetzner Cloud Configuration
# Get API token from: Hetzner Cloud Console > Project > Security > API Tokens
# -----------------------------------------------------------------------------

hcloud_token = "your-api-token-here"

# Location (datacenter)
# fsn1: Falkenstein, Germany (cheapest)
# nbg1: Nuremberg, Germany
# hel1: Helsinki, Finland
# ash: Ashburn, USA
location = "nbg1"

# -----------------------------------------------------------------------------
# Project Configuration
# -----------------------------------------------------------------------------

projects = [
  "project-alpha",
  "project-beta",
]

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# x86 options (Intel/AMD):
#   cx23: 2 vCPU, 4GB RAM,  40GB (recommended)
#   cx33: 4 vCPU, 8GB RAM,  80GB
#   cx43: 8 vCPU, 16GB RAM, 160GB
#   cx53: 16 vCPU, 32GB RAM, 320GB
#
# ARM options (Ampere):
#   cax11: 2 vCPU, 4GB RAM,  40GB
#   cax21: 4 vCPU, 8GB RAM,  80GB
#   cax31: 8 vCPU, 16GB RAM, 160GB

server_type = "cx33"
image       = "ubuntu-24.04"

# -----------------------------------------------------------------------------
# SSH Configuration
# -----------------------------------------------------------------------------

ssh_public_key_path  = "~/.ssh/id_rsa.pub"
ssh_private_key_path = "~/.ssh/id_rsa"
ssh_key_name         = "claude-dev"

# -----------------------------------------------------------------------------
# Firewall Configuration
# Recommended: restrict to your IP
# -----------------------------------------------------------------------------

allowed_ssh_cidrs = ["0.0.0.0/0"]  # Replace: ["YOUR_IP/32"]
allowed_app_cidrs = ["0.0.0.0/0"]  # Replace: ["YOUR_IP/32"]

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

git_repo_url = "https://github.com/your-org/claude-dev.git"

# -----------------------------------------------------------------------------
# Cloudflare Configuration (SSL/DNS)
# Create API token at: https://dash.cloudflare.com/profile/api-tokens
# Required permission: Zone > DNS > Edit
# Zone ID: Cloudflare Dashboard > domain > Overview (right sidebar)
# -----------------------------------------------------------------------------

cloudflare_api_token = "your-cloudflare-api-token-here"
cloudflare_zone_id   = "your-zone-id-here"
domain               = "example.com"
certbot_email        = "admin@example.com"
